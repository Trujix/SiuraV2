@{
    Layout = null;
}
<div class="row" style="padding-top: 5px;">
    <div class="col-sm-3">
        <select id="selecTipoInventario" class="form-control form-control-sm">
            <option value="*">TODOS</option>
            <option value="CD">Coord. Deportiva</option>
            <option value="CM">Coord. Médica</option>
            <option value="CP">Coord. Psicológica</option>
            <option value="INSUMOS">Insumos</option>
        </select>
    </div>
    <div class="col-sm-3">
        <button id="btnObtenerInventario" class="btn badge badge-pill badge-info"><i class="fa fa-list"></i>&nbsp;Obtener Lista Inventario</button>
    </div>
    <div class="col-sm-3">
        <button id="btnNuevoInventario" class="btn badge badge-pill badge-primary"><i class="fa fa-plus"></i> Agregar Articulo Inventario</button>
    </div>
    <div class="col-sm-3">
        <button id="btImprimirInventario" class="btn badge badge-pill badge-dark"><i class="fa fa-print"></i> Imprimir Reporte Inventario</button>
    </div>
</div>
<div class="row" style="padding-top: 15px;">
    <div id="divTabla" class="col-sm-12"></div>
</div>