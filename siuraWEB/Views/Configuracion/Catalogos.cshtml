@{
    Layout = null;
}
<div class="row scrollestilo" style="padding-top: 5px; height: 80vh; overflow: scroll;">
    <div class="col-sm-12">
        <h5>Modelos de Tratamiento:</h5>
        <div class="row">
            <div class="col-sm-3">
                <button id="nuevoModeloTratamiento" class="btn btn-info btn-sm btn-block"><i class="fa fa-plus"></i>&nbsp;Nuevo Modelo Tratamiento</button>
            </div>
            <div class="col-sm-3">
                <select id="modelosTratamientosSelect" class="form-control form-control-sm"></select>
            </div>
            <div class="col-sm-3">
                <div class="card">
                    <div class="row">
                        <div class="col-sm-6" align="center">
                            <button id="editarModeloTratamiento" class="btn badge badge-warning" title="Editar Modelo" style="cursor: pointer;"><i class="fa fa-pencil-alt"></i>&nbsp;Editar</button>
                        </div>
                        <div class="col-sm-6" align="center">
                            <button id="eliminarModeloTratamiento" class="btn badge badge-danger" title="Eliminar Modelo" style="cursor: pointer;"><i class="fa fa-trash-alt"></i>&nbsp;Eliminar</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <hr />
        <h5>Fases de Tratamientos:</h5>
        <div class="row">
            <div class="col-sm-3">
                <button id="nuevaFasesTratamiento" class="btn btn-info btn-sm btn-block"><i class="fa fa-plus"></i>&nbsp;Nuevo Esquema de Fases</button>
            </div>
            <div class="col-sm-4">
                <select id="fasesTratamientosSelect" class="form-control form-control-sm"></select>
            </div>
            <div class="col-sm-3">
                <div class="card">
                    <div class="row">
                        <div class="col-sm-2" align="center">
                            <button id="infoFaseTratamiento" class="btn badge badge-secondary" title="Info Esquema Fases" style="cursor: pointer;"><i class="fa fa-info-circle"></i></button>
                        </div>
                        <div class="col-sm-5" align="center">
                            <button id="editarFaseTratamiento" class="btn badge badge-warning" title="Editar Esquema Fases" style="cursor: pointer;"><i class="fa fa-pencil-alt"></i>&nbsp;Editar</button>
                        </div>
                        <div class="col-sm-5" align="center">
                            <button id="eliminarFaseTratamiento" class="btn badge badge-danger" title="Eliminar  Esquema Fases" style="cursor: pointer;"><i class="fa fa-trash-alt"></i>&nbsp;Eliminar</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <hr />
        <h5>Estados de Alerta:</h5>
        <div class="row">
            <div class="col-sm-3">
                <button id="nuevoEstadoAlerta" class="btn btn-info btn-sm btn-block"><i class="fa fa-plus"></i>&nbsp;Nuevo Estado de Alerta</button>
            </div>
            <div class="col-sm-3">
                <select id="estadosAlertaSelect" class="form-control form-control-sm"></select>
            </div>
            <div class="col-sm-3">
                <div class="card">
                    <div class="row">
                        <div class="col-sm-6" align="center">
                            <button id="editarEstadoAlerta" class="btn badge badge-warning" title="Editar Estado Alerta" style="cursor: pointer;"><i class="fa fa-pencil-alt"></i>&nbsp;Editar</button>
                        </div>
                        <div class="col-sm-6" align="center">
                            <button id="eliminarEstadoAlerta" class="btn badge badge-danger" title="Eliminar Estado Alerta" style="cursor: pointer;"><i class="fa fa-trash-alt"></i>&nbsp;Eliminar</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <hr />
        <h5>Niveles de Intoxicación:</h5>
        <div class="row">
            <div class="col-sm-3">
                <button id="nuevoNivelIntoxicacion" class="btn btn-info btn-sm btn-block"><i class="fa fa-plus"></i>&nbsp;Nuevo Nivel de Intoxicación</button>
            </div>
            <div class="col-sm-3">
                <select id="nivelIntoxicacionSelect" class="form-control form-control-sm"></select>
            </div>
            <div class="col-sm-3">
                <div class="card">
                    <div class="row">
                        <div class="col-sm-6" align="center">
                            <button id="editarNivelIntoxicacion" class="btn badge badge-warning" title="Editar Nivel Intoxicación" style="cursor: pointer;"><i class="fa fa-pencil-alt"></i>&nbsp;Editar</button>
                        </div>
                        <div class="col-sm-6" align="center">
                            <button id="eliminarNivelIntoxicacion" class="btn badge badge-danger" title="Eliminar Nivel Intoxicación" style="cursor: pointer;"><i class="fa fa-trash-alt"></i>&nbsp;Eliminar</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <hr />
        <h5>Estados de Ánimo:</h5>
        <div class="row">
            <div class="col-sm-3">
                <button id="nuevoEstadoAnimo" class="btn btn-info btn-sm btn-block"><i class="fa fa-plus"></i>&nbsp;Nuevo Estado de Ánimo</button>
            </div>
            <div class="col-sm-3">
                <select id="estadoAnimoSelect" class="form-control form-control-sm"></select>
            </div>
            <div class="col-sm-3">
                <div class="card">
                    <div class="row">
                        <div class="col-sm-6" align="center">
                            <button id="editarEstadoAnimo" class="btn badge badge-warning" title="Editar Estado Ánimo" style="cursor: pointer;"><i class="fa fa-pencil-alt"></i>&nbsp;Editar</button>
                        </div>
                        <div class="col-sm-6" align="center">
                            <button id="eliminarEstadoAnimo" class="btn badge badge-danger" title="Eliminar Estado Ánimo" style="cursor: pointer;"><i class="fa fa-trash-alt"></i>&nbsp;Eliminar</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div id="modalModeloTratamiento" class="modal fade bd-example-modal-sm" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" data-backdrop="static" data-keyboard="false" aria-hidden="true">
    <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalModeloTratamientoTitulo">Nuevo Modelo</h5>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-12">
                        <input id="modalModeloTratamientoNombre" type="text" class="form-control form-control-sm" placeholder="Nombre Modelo Tratamiento" autocomplete="off" />
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button id="modalModeloTratamientoGuardar" type="button" class="btn btn-sm btn-success"><i class="fa fa-save"></i>&nbsp;Guardar</button>
                <button type="button" class="btn btn-sm btn-secondary" data-dismiss="modal"><i class="fa fa-times-circle"></i>&nbsp;Cancelar</button>
            </div>
        </div>
    </div>
</div>
<div id="modalFasesTratamiento" class="modal fade bd-example-modal-xl" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" data-backdrop="static" data-keyboard="false" aria-hidden="true">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalFasesTratamientoTitulo"></h5>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-5">
                        <div class="form-group row">
                            <label for="modalNumFasesTratamiento" class="col-sm-3 col-form-label"><b>N° Fases:</b></label>
                            <div class="col-sm-9">
                                <input id="modalNumFasesTratamiento" type="number" min="0" step="1" class="form-control form-control-sm" />
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <button id="modalLimpiarFasesTratamiento" class="btn btn-sm btn-warning" title="Limpiar Formulario"><i class="fa fa-broom"></i></button>
                    </div>
                </div>
                <div class="row" style="padding-top: 10px;">
                    <div class="col-sm-12">
                        <div class="table table-responsive">
                            <table class="table table-bordered table-sm">
                                <thead>
                                    <tr>
                                        <th style="text-align: center;">Nombre(s) Fases&nbsp;<button class="btn badge badge-pill badge-secondary infofasetabla" columna="nombre" title="Info"><i class="fa fa-info-circle"></i></button></th>
                                        <th style="text-align: center;">Tipo(s)&nbsp;<button class="btn badge badge-pill badge-secondary infofasetabla" columna="tipo" title="Info"><i class="fa fa-info-circle"></i></button></th>
                                        <th style="text-align: center;">Modelos&nbsp;<button class="btn badge badge-pill badge-secondary infofasetabla" columna="modelo" title="Info"><i class="fa fa-info-circle"></i></button></th>
                                    </tr>
                                </thead>
                                <tbody id="modalTablaFasesTratamiento"></tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button id="modalFasesTratamientoGuardar" type="button" class="btn btn-sm btn-success"><i class="fa fa-save"></i>&nbsp;Guardar</button>
                <button type="button" class="btn btn-sm btn-secondary" data-dismiss="modal"><i class="fa fa-times-circle"></i>&nbsp;Cancelar</button>
            </div>
        </div>
    </div>
</div>
