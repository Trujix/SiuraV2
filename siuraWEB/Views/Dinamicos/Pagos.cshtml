@{
    Layout = null;
}
<div id="modalPacientesPagos" class="modal fade bd-example-modal-xl" tabindex="-1" role="dialog" data-keyboard="false">
    <div class="modal-dialog modal-xl modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalCenterTitle">Gestionar Pagos</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-3">
                        <div class="input-group input-group-sm mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="inputGroup-sizing-sm">$</span>
                            </div>
                            <input id="modalPacienteRegistroPago" type="number" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm" placeholder="Monto a pagar" autocomplete="off">
                            <div class="input-group-append">
                                <span class="input-group-text">.00</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <select id="modalPacienteTipoPago" class="form-control form-control-sm">
                            <option value="-1">- Eliga tipo de pago -</option>
                            <option value="1">Efectivo</option>
                            <option value="2">Transferencia Bancaria</option>
                            <option value="3">Cheque</option>
                            <option value="4">Deposito</option>
                        </select>
                    </div>
                    <div class="col-sm-2">
                        <button id="modalBtnGenerarPago" class="btn badge badge-pill badge-success"><i class="fa fa-money-bill-alt"></i> Generar pago</button>
                    </div>
                    <div id="modalDivReferenciaPago" class="col-sm-4">
                        <textarea id="modalTxtReferenciaPago" class="form-control form-control-sm" placeholder="Referencia, Folio, Descripción..."></textarea>
                    </div>
                </div>
                <div class="row" style="padding-top: 5px;">
                    <div class="col-sm-9">
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="card">
                                    <div class="card-header">
                                        <i class="fa fa-dollar-sign"></i> Historial de Pagos
                                    </div>
                                    <div class="table table-sm scrollestilo" style="overflow: scroll; height: 22vh;">
                                        <table class="table table-striped table-bordered">
                                            <thead>
                                                <tr class="table-active">
                                                    <th>Folio</th>
                                                    <th>Cantidad</th>
                                                    <th>Fecha</th>
                                                    <th style="text-align: center;"><i class="fa fa-cog"></i></th>
                                                </tr>
                                            </thead>
                                            <tbody id="modalTablaPacientesPagos"></tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-12" style="padding-top: 5px;">
                                <button id="modalBtnNuevoCargoAdicional" class="btn badge badge-pill badge-info"><i class="fa fa-plus"></i>&nbsp;Nuevo Cargo Adicional</button>
                            </div>
                            <div class="col-sm-12" style="padding-top: 5px;">
                                <div class="card">
                                    <div class="card-header">
                                        <i class="fa fa-dollar-sign"></i> Cargos Adicionales
                                    </div>
                                    <div class="table table-sm scrollestilo" style="overflow: scroll; height: 22vh;">
                                        <table class="table table-striped table-bordered">
                                            <thead>
                                                <tr class="table-active">
                                                    <th>Folio</th>
                                                    <th>Descripción</th>
                                                    <th>Importe</th>
                                                    <th>Fecha</th>
                                                    <th style="text-align: center;"><i class="fa fa-cog"></i></th>
                                                </tr>
                                            </thead>
                                            <tbody id="modalTablaCargosAdicionales"></tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="card">
                            <div class="card-body">
                                <h6><b>Paciente:</b>&nbsp;<i id="modalPacienteNombre"></i></h6>
                                <h6><b>Monto Inicial:</b>&nbsp;<span class="badge badge-secondary">$&nbsp;<i id="modalPacienteMontoInicial"></i></span></h6>
                                <h6><b>Monto Actual:</b>&nbsp;<span class="badge badge-warning">$&nbsp;<i id="modalPacienteMontoActual"></i></span></h6>
                                <hr />
                                <h6><b>Cargos Adicionales:</b></h6>
                                <span class="badge badge-secondary">$&nbsp;<i id="modalPacienteCargoAdicional">0.00</i></span>
                                <hr />
                                <div id="modalDivPacienteBecaInfo" class="row"></div>
                                <hr />
                                <div id="modalDivPacientePagosParcial"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-sm btn-danger" data-dismiss="modal">Cerrar (ESC)</button>
            </div>
        </div>
    </div>
</div>
<div id="modalNuevoCargoAdicional" class="modal" tabindex="-1" role="dialog" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Nuevo Cargo Adicional</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-10">
                        <div class="input-group input-group-sm mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="inputGroup-sizing-sm">$</span>
                            </div>
                            <input id="modalImporteCargoAdicional" type="number" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm" placeholder="Importe Cargo" autocomplete="off">
                            <div class="input-group-append">
                                <span class="input-group-text">.00</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <input id="modalDescripcionCargoAdicional" type="text" class="form-control form-control-sm" placeholder="Descripcion del Cargo" autocomplete="off" />
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-sm btn-danger" data-dismiss="modal">Cancelar</button>
                <button id="modalGuardarCargoAdicional" type="button" class="btn btn-sm btn-success">Guardar Cargo</button>
            </div>
        </div>
    </div>
</div>
<div id="modalPagoCargoAdicional" class="modal" tabindex="-1" role="dialog" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Opciones de Pago</h5>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-12">
                        <h6><span class="badge badge-primary">Cargo:</span>&nbsp;<i id="modalPagoCargoImporte"></i></h6>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <h6><span class="badge badge-primary">Descripción:</span>&nbsp;<i id="modalPagoCargoDescripcion"></i></h6>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <select id="modalPagoCargoTipoPago" class="form-control form-control-sm">
                            <option value="1">Efectivo</option>
                            <option value="2">Transferencia Bancaria</option>
                            <option value="3">Cheque</option>
                            <option value="4">Deposito</option>
                        </select>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12" style="padding-top: 10px;">
                        <textarea id="modalFolDescRefPagoCargo" class="form-control form-control-sm" placeholder="Descripción / Folio / Referencia"></textarea>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-sm btn-danger" data-dismiss="modal">Cancelar</button>
                <button id="modalGuardarPagoCargoAdicional" type="button" class="btn btn-sm btn-success">Generar Pago</button>
            </div>
        </div>
    </div>
</div>